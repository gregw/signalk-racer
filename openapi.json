{
  "openapi": "3.0.0",
  "info": {
    "version": "0.9.5",
    "title": "SignalK Racer Plugin v2 API",
    "description": "Signal K plugin for racing functions: setting the start line and time to start via PUT operations on Signal K paths.",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths": {
    "/signalk/v1/api/vessels/self/navigation/racing/timeToStart": {
      "put": {
        "summary": "Set Time to Start",
        "description": "Set the countdown time to the start line.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "number",
                    "description": "Time to start in seconds"
                  }
                },
                "required": ["value"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Time to start updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "state": { "type": "string" },
                    "result": {
                      "type": "object",
                      "properties": {
                        "distanceToStart": {
                          "type": "number",
                          "description": "Current calculated distance to the start line"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/signalk/v1/api/vessels/self/navigation/racing/startLinePort": {
      "put": {
        "summary": "Set Start Line Port End",
        "description": "Set the port end of the start line to a given position or the current boat location.",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "latitude": { "type": "number" },
                  "longitude": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Start line port end updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "state": { "type": "string" },
                    "result": {
                      "type": "object",
                      "properties": {
                        "distanceToStart": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/signalk/v1/api/vessels/self/navigation/racing/startLineStb": {
      "put": {
        "summary": "Set Start Line Starboard End",
        "description": "Set the starboard end of the start line to a given position or the current boat location.",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "latitude": { "type": "number" },
                  "longitude": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Start line starboard end updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "state": { "type": "string" },
                    "result": {
                      "type": "object",
                      "properties": {
                        "distanceToStart": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
